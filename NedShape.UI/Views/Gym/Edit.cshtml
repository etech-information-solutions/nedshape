@model NedShape.UI.Models.ServiceViewModel

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Edit";
}


@Html.Partial( "_Notification" )

@using ( Html.BeginForm( "Edit", "Service", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax_form = "1", @data_target = "#services", @class = "custom-validate", @style = "width: auto;" } ) )
{
    <div id="edit-item">

        <h2 class="uppercase" style="width: auto;">
            <img alt="" src="@Url.Content( "~/images/edit.png" )" />
            <span>Edit Service</span>
        </h2>

        @Html.ValidationSummary( true )

        @Html.HiddenFor( model => model.Id )

    <div id="item-details" class="item-details" style="width: auto;">

        <div class="left" style="width: 48%; margin-right: 1%;">

            <div class="edit-label">
                @Html.LabelFor( model => model.Name )
            </div>
            <div class="edit-field">
                @Html.TextBoxFor( model => model.Name, new { @placeholder = "Enter Service Name" } )
                @Html.ValidationMessageFor( model => model.Name )
            </div>

            <div class="edit-label">
                @Html.LabelFor( model => model.Description )
            </div>
            <div class="edit-field">
                @Html.TextBoxFor( model => model.Description, new { @placeholder = "Enter Service Description" } )
                @Html.ValidationMessageFor( model => model.Description )
            </div>

        </div>

        <div class="left" style="width: 48%;">

            <div class="edit-label">
                @Html.LabelFor( model => model.Price )
            </div>
            <div class="edit-field">
                <input data-val="true" data-val-number="The field Price must be a number." id="Price" name="Price" placeholder="Enter Service Price" type="text" value="@( Model.Price.HasValue ? Model.Price.Value.ToString( "#.##" ) : "")" class="input-validation-error" aria-describedby="Price-error" aria-invalid="true">
                @Html.ValidationMessageFor( model => model.Price )
            </div>

            <div class="edit-label">
                @Html.LabelFor( model => model.Status )
            </div>
            <div class="edit-field">
                @Html.EnumDropDownFor( model => model.Status, false, new { @class = "chzn", @style = "width: 97%;" } )
                @Html.ValidationMessageFor( model => model.Status )
            </div>

        </div>

        <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 20px;">&nbsp;</div>

        <p>
            <input id="save-btn" type="submit" value="Save" />
            <span style="padding: 0 5px;">/</span> <a data-cancel="1" data-target="#edit-item" data-remove="tr.edit">Cancel</a>
        </p>

    </div>
    
    </div>
}