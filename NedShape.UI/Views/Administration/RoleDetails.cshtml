@model Role

@using NedShape.Core.Enums
@using NedShape.Data.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Details";

    RoleType type = ( RoleType ) Model.Type;
}

@if ( ViewBag.IncludeLayout != null )
{
    <h2>
        <img alt="" src="@Url.Content( "~/images/info.png" )" />
        <span>Role Details</span>
    </h2>
}

<div id="item-details" class="item-details" style="width: auto;">

    @if ( ViewBag.IncludeLayout == null )
    {
        <h2>
            <img alt="" src="@Url.Content( "~/images/info.png" )" />
            <span>Role Details</span>
        </h2>
    }

    <div class="left" style="width: 47%; margin-right: 1%;">

        <div class="display-label">
            Name
        </div>
        <div class="display-field">
            @Html.DisplayFor( model => model.Name )
        </div>

        <div class="display-label">
            Type
        </div>
        <div class="display-field">
            @type.GetDisplayText()
        </div>

    </div>

    <div id="role-functions" class="grouped-area left" style="width: 48%;">

        <p>
            <strong class="uppercase" style="color: #9935bd !important;">FUNCTIONS</strong>
        </p>

        @if ( Model.DashBoard )
        {
            <div class="display-field">
                Dashboard
            </div>
        }

        @if ( Model.Clients )
        {
            <div class="display-field">
                Clients
            </div>
        }

        @if ( Model.Services )
        {
            <div class="display-field">
                Services
            </div>
        }

        @if ( Model.Members )
        {
            <div class="display-field">
                Members
            </div>
        }

        @if ( Model.Gyms )
        {
            <div class="display-field">
                Gyms &Aacute; Services
            </div>
        }

        @if ( Model.Financials )
        {
            <div class="display-field">
                Financials
            </div>
        }

        @if ( Model.Administration )
        {
            <div class="display-field">
                Administration
            </div>
        }

        @if ( Model.Reports )
        {
            <div class="display-field">
                Reports
            </div>
        }

        @if ( Model.Profile )
        {
            <div class="display-field">
                Profile
            </div>
        }

        @if ( Model.Statements )
        {
            <div class="display-field">
                Statements
            </div>
        }

    </div>

    <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 20px; height: 0;">&nbsp;</div>

    @if ( ViewBag.IncludeLayout == null )
    {
        <p>
            @Html.ActionLink( "Edit", "EditRole", new { id = Model.Id }, new { @class = "edit", @data_edit = "1", @data_id = Model.Id, @data_target = "#tr-" + Model.Id + "-item" } )

            @if ( ViewBag.IncludeLayout == null )
            {
                <span style="padding: 0 5px;">/</span>
                <a data-cancel="1" data-target="#item-details" data-remove="tr.edit">Cancel</a>
            }
        </p>
    }

    @if ( ViewBag.IncludeLayout != null )
    {
        <div class="back-to-list">
            @Html.ActionLink( "Back to List", "Index" )
        </div>
    }

</div>
