@model NedShape.UI.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}


<div class="sign-in">

    <div class="heads">
        Account Login
    </div>

    <div class="details">

        @using ( Html.BeginForm( new { ReturnUrl = ViewBag.ReturnUrl } ) )
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary( true )

            <p>
                @Html.TextBoxFor( model => model.UserName, new { @class = "input username", @placeholder = "User Name" } )
                @Html.ValidationMessageFor( model => model.UserName )
            </p>

            <p>
                @Html.PasswordFor( model => model.Password, new { @class = "input password", @placeholder = "Password" } )
                @Html.ValidationMessageFor( model => model.Password )
            </p>
            
            <div class="h-space"></div>

            <p>
                <input type="submit" value="Sign In" style="display: inline;" />

                <span style="padding: 0 4px;">|</span>

                @Html.ActionLink( "Sign Up", "SignUp", new { }, new { @class = "uppercase" } )

                <span style="padding: 0 4px;">|</span>

                @Html.ActionLink( "Forgot Password", "ForgotPassword", new { }, new { @class = "uppercase" } )
            </p>
        
            <p style="margin: 0;">
                
            </p>
        }

    </div>

</div>

<div class="shadow-small">&nbsp;</div>
