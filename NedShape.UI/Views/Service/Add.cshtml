@model NedShape.UI.Models.ServiceViewModel

@using NedShape.Data.Models
@using NedShape.Core.Models;

@{
    if ( ViewBag.IncludeLayout == null )
    {
        Layout = null;
    }

    ViewBag.Title = "Add Service";
}


@Html.Partial( "_Notification" )

@using ( Html.BeginForm( "Add", "Service", FormMethod.Post, new { enctype = "multipart/form-data", @data_ajax_form = "1", @data_target = "#services", @class = "custom-validate", @style = "width: auto;" } ) )
{
    <div id="edit-item">

        <h2 class="uppercase" style="width: auto;">
            <img alt="" src="@Url.Content( "~/images/add.png" )" />
            <span>Add Service</span>
        </h2>

        @Html.ValidationSummary( true )

        <div id="item-details" class="item-details" style="width: auto;">

            <div class="left" style="width: 48%; margin-right: 1%;">

                <div class="edit-label">
                    @Html.LabelFor( model => model.Name )
                </div>
                <div class="edit-field">
                    @Html.TextBoxFor( model => model.Name, new { @placeholder = "Enter Service Name" } )
                    @Html.ValidationMessageFor( model => model.Name )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Description )
                </div>
                <div class="edit-field">
                    @Html.TextBoxFor( model => model.Description, new { @placeholder = "Enter Service Description" } )
                    @Html.ValidationMessageFor( model => model.Description )
                </div>

            </div>

            <div class="left" style="width: 48%;">

                <div class="edit-label">
                    @Html.LabelFor( model => model.Price )
                </div>
                <div class="edit-field">
                    @Html.TextBoxFor( model => model.Price, new { @placeholder = "Enter Service Price" } )
                    @Html.ValidationMessageFor( model => model.Price )
                </div>

                <div class="edit-label">
                    @Html.LabelFor( model => model.Status )
                </div>
                <div class="edit-field">
                    @Html.EnumDropDownFor( model => model.Status, false, new { @class = "chzn", @style = "width: 98%;" } )
                    @Html.ValidationMessageFor( model => model.Status )
                </div>

            </div>

            <div class="clear" style="border-bottom: 1px dashed #ccc; margin-bottom: 10px; height: 0;">&nbsp;</div>

            <p>
                <input id="save-btn" type="submit" value="Save" />

                <span style="padding: 0 5px;">/</span>

                <a data-refresh="1" data-target="#services">Cancel</a>
            </p>

        </div>

    </div>
}